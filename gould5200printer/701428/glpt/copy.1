(defun copy-file (from to)
   (setq from (open from '(in fixnum))
	 to   (open to   '(out fixnum)))
   (do ((i (caddar (directory (list (truename from)) '(words)))
	   (- i 500))
	(copy (array nil fixnum 500)))
       ((> i 0))
       (cond ((< i 500) (*rearray copy 'fixnum i)))
       (fillarray copy from)
       (fillarray to copy))
   (close from)
   (close to))